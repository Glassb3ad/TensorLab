{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@tensor/*": ["./src/tensor/*"],
      "@image/*": ["./src/image-operations/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
