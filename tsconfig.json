{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@tensor/*": ["./src/tensor/*"],
      "@image/*": ["./src/image-operations/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
